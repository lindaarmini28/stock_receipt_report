<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Paper Format for Receipt Report -->
        <record id="paperformat_receipt_report" model="report.paperformat">
            <field name="name">Receipt Report Layout</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">6</field>
            <field name="margin_right">6</field>
            <field name="margin_bottom">6</field>
            <field name="margin_left">6</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Receipt Report Action -->
        <record id="action_report_receipt" model="ir.actions.report">
            <field name="name">Receipt Report</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_receipt_report.report_receipt_document</field>
            <field name="report_file">stock_receipt_report.report_receipt_document</field>
            <field name="print_report_name">'Receipt - %s' % (object.name)</field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="stock_receipt_report.paperformat_receipt_report"/>
        </record>
    </data>
</odoo>
